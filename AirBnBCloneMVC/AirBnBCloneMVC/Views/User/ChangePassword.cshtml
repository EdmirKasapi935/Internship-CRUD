<div class="text-center">
<h1 class="display-6">Fill out the fields below to change your password</h1>
</div>

<div class="w-25 mx-auto">
    <form asp-controller="User" asp-action="ChangePassword">
        <!--
        <label class="mt-1">Email:</label><input type="email" name="userEmail" style="margin-left: 33px" required /> <br />
        <label class="mt-1">New Password:</label><input type="password" name="newPassword" style="margin-left: 5px" required /> <br />
        <label class="mt-1">Confirm password:</label><input type="password" name="newPasswordConfirm" style="margin-left: 5px" required /> <br />
        -->
        

        <div class="col">
            <label> E-Mail </label>
            <input type="email" class="form-control" name="userEmail" placeholder="Example@Mail.com" required>
        </div>
        <div class="col">
            <label>New Password</label>
            <input type="password" class="form-control" name="newPassword"  required>
        </div>
        <div class="col">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="newPasswordConfirm"  required>
        </div>


        <input  type="submit" value="Submit" class="btn btn-primary mt-2 w-100" />
    </form>

    <a asp-controller="Home" asp-action="Index"> <button class="btn btn-danger w-100 mt-2"> Cancel </button> </a>

</div>

@if (ViewData["WrongEmailMessage"] != null)
{
    <div class="alert alert-danger w-50 text-center mx-auto mt-4" role="alert">
        @ViewData["WrongEmailMessage"]
    </div>
}

@if (ViewData["ConfirmPasswordErrorMessage"] != null)
{
    <div class="alert alert-danger w-50 text-center mx-auto mt-4" role="alert">
        @ViewData["ConfirmPasswordErrorMessage"]
    </div>
}




