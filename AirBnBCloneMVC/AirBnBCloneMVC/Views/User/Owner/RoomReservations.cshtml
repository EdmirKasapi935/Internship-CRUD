@model Tuple<List<Reservation>, List<Room>>
@{
    var reservations = Model.Item1;
    var rooms = Model.Item2;
}



<table class="table">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>Check-in</th>
            <th>Check-Out</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in reservations)
        {
            <tr>
                <td>@rooms.Find(n => n.Id.ToString() == reservation.Room_ID ).Room_Name</td>
                <td>@reservation.StartDate</td>
                <td>@reservation.EndDate</td>
                <td>@reservation.Total_price</td>
                <td>
                    <!--<a asp-controller="Reservation" asp-action="EditForm" asp-route-id="@reservation.Id"> <button class="btn btn-primary rounded-lg"> Inspect </button>  </a>-->
                </td>
            </tr>
        }
    </tbody>

</table>

<br />
